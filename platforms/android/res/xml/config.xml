<?xml version='1.0' encoding='utf-8'?>
<widget id="info.luftdaten.mobilefeinstaub" version="1.0.7" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="File">
        <param name="android-package" value="org.apache.cordova.file.FileUtils" />
        <param name="onload" value="true" />
    </feature>
    <allow-navigation href="cdvfile:*" />
    <feature name="Geolocation">
        <param name="android-package" value="org.apache.cordova.geolocation.Geolocation" />
    </feature>
    <feature name="MediaScannerPlugin">
        <param name="android-package" value="br.com.brunogrossi.MediaScannerPlugin.MediaScannerPlugin" />
    </feature>
    <name>MobileFeinstaub</name>
    <description>
        Mobile Feinstaubmessung
    </description>
    <author email="rajko@codefor.de" href="http://codefor.de">
        Rajko Zschiegner (Open Knowledge Lab Stuttgart)
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <icon density="ldpi" src="res/mipmap-ldpi/codeforstuttgart_ldpi.png" />
    <icon density="mdpi" src="res/mipmap-mdpi/codeforstuttgart_mdpi.png" />
    <icon density="hdpi" src="res/mipmap-hdpi/codeforstuttgart_hdpi.png" />
    <icon density="xhdpi" src="res/mipmap-xhdpi/codeforstuttgart_xhdpi.png" />
    <icon density="xxhdpi" src="res/mipmap-xxhdpi/codeforstuttgart_xxhdpi.png" />
    <icon density="xxxhdpi" src="res/mipmap-xxxhdpi/codeforstuttgart_xxxhdpi.png" />
    <preference name="loglevel" value="DEBUG" />
</widget>
